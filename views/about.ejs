        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298, #2c3e50);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: white;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .nav {
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(20, 30, 48, 0.9);
            backdrop-filter: blur(10px);
            position: fixed;
            width: 100%;
            z-index: 100;
            transition: all 0.3s ease;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.2);
        }

        .nav.scrolled {
            padding: 0.5rem 2rem;
            background: rgba(20, 30, 48, 0.95);
        }

        .logo {
            font-size: 2rem;
            font-weight: bold;
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

        .logo:hover {
            transform: scale(1.05);
        }

        .logo i {
            margin-right: 0.5rem;
            color: #4e9af1;
        }

        .nav-links {
            display: flex;
            gap: 2rem;
        }

        .nav-link {
            color: white;
            text-decoration: none;
            transition: all 0.3s ease;
            padding: 0.5rem 1.2rem;
            border-radius: 5px;
            position: relative;
            overflow: hidden;
        }

        .nav-link:before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background-color: #4e9af1;
            transition: width 0.3s ease;
        }

        .nav-link:hover:before {
            width: 100%;
        }

        .nav-link:hover {
            background: rgba(78, 154, 241, 0.1);
            transform: translateY(-2px);
        }

        /* Hero Section */
        .hero {
            min-height: 70vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 8rem 2rem 4rem;
            position: relative;
            overflow: hidden;
        }

        .hero-content {
            z-index: 1;
            max-width: 900px;
        }

        .title {
            font-size: 4rem;
            margin-bottom: 1rem;
            animation: fadeInDown 1.2s ease-out;
            background: linear-gradient(90deg, #ffffff, #4e9af1);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .subtitle {
            font-size: 1.5rem;
            margin-bottom: 2.5rem;
            animation: fadeInUp 1.2s ease-out 0.5s backwards;
            opacity: 0.9;
        }

        /* About Section */
        .section {
            padding: 5rem 2rem;
            position: relative;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .section-title {
            text-align: center;
            margin-bottom: 3rem;
            position: relative;
        }

        .section-title h2 {
            font-size: 2.5rem;
            display: inline-block;
            background: linear-gradient(90deg, #ffffff, #4e9af1);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .section-title h2:after {
            content: '';
            display: block;
            width: 50%;
            height: 3px;
            background-color: #4e9af1;
            margin: 10px auto 0;
        }

        .about-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-bottom: 4rem;
        }

        .about-card {
            background: rgba(20, 30, 48, 0.7);
            backdrop-filter: blur(10px);
            padding: 2.5rem 2rem;
            border-radius: 8px;
            text-align: center;
            transition: all 0.4s ease;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(78, 154, 241, 0.1);
            opacity: 0;
            transform: translateY(30px);
        }

        .about-card.show {
            opacity: 1;
            transform: translateY(0);
        }

        .about-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            border-color: rgba(78, 154, 241, 0.3);
        }

        .about-card i {
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            color: #4e9af1;
            display: inline-block;
        }

        .about-card h3 {
            margin-bottom: 1rem;
            font-size: 1.4rem;
        }

        .about-card p {
            opacity: 0.8;
            line-height: 1.6;
        }

        /* Process Section */
        .process-section {
            background: rgba(20, 30, 48, 0.5);
            backdrop-filter: blur(10px);
            padding: 5rem 2rem;
        }

        .process-steps {
            display: flex;
            justify-content: space-between;
            margin: 4rem 0;
            position: relative;
        }

        .process-steps:before {
            content: '';
            position: absolute;
            top: 40px;
            left: 10%;
            width: 80%;
            height: 3px;
            background-color: #4e9af1;
            z-index: 1;
        }

        .step {
            text-align: center;
            position: relative;
            z-index: 2;
            width: 16%;
        }

        .step-number {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background-color: #4e9af1;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            font-weight: bold;
            margin: 0 auto 20px;
            box-shadow: 0 5px 15px rgba(78, 154, 241, 0.3);
            transition: all 0.3s ease;
        }

        .step:hover .step-number {
            transform: scale(1.1);
            box-shadow: 0 8px 20px rgba(78, 154, 241, 0.5);
        }

        .step h3 {
            margin-bottom: 10px;
            font-size: 18px;
        }

        .step p {
            font-size: 14px;
            opacity: 0.8;
        }

        /* Architecture Section */
        .architecture-section {
            padding: 5rem 2rem;
        }

        .architecture-diagram {
            max-width: 100%;
            margin: 3rem auto;
            display: block;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            border-radius: 10px;
            background: rgba(20, 30, 48, 0.7);
            backdrop-filter: blur(10px);
        }

        /* Safety Categories Section */
        .safety-section {
            background: rgba(20, 30, 48, 0.5);
            backdrop-filter: blur(10px);
            padding: 5rem 2rem;
        }

        .safety-categories {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            margin-top: 3rem;
        }

        .safety-category {
            padding: 2.5rem 2rem;
            border-radius: 8px;
            color: white;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .safety-category:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
        }

        .safety-category.red {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
        }

        .safety-category.yellow {
            background: linear-gradient(135deg, #f39c12, #d35400);
        }

        .safety-category.green {
            background: linear-gradient(135deg, #2ecc71, #27ae60);
        }

        .safety-category h3 {
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .safety-category ul {
            list-style-position: inside;
            margin-top: 1rem;
        }

        .safety-category li {
            margin-bottom: 0.5rem;
            opacity: 0.9;
        }

        /* Team Section */
        .team-section {
            padding: 5rem 2rem;
        }

        .team-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .team-member {
            background: rgba(20, 30, 48, 0.7);
            backdrop-filter: blur(10px);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            border: 1px solid rgba(78, 154, 241, 0.1);
        }

        .team-member:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            border-color: rgba(78, 154, 241, 0.3);
        }

        .team-member img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            transition: all 0.5s ease;
        }

        .team-member:hover img {
            transform: scale(1.05);
        }

        .team-member-info {
            padding: 1.5rem;
            text-align: center;
        }

        .team-member-info h3 {
            margin-bottom: 0.5rem;
            font-size: 1.3rem;
        }

        .team-member-info p {
            color: #4e9af1;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        .social-link {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(78, 154, 241, 0.1);
            color: white;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .social-link:hover {
            background: #4e9af1;
            transform: translateY(-3px);
        }

        /* Contact Section */
        .contact-section {
            padding: 5rem 2rem;
            background: rgba(20, 30, 48, 0.5);
            backdrop-filter: blur(10px);
        }

        .contact-form {
            max-width: 600px;
            margin: 0 auto;
            background: rgba(20, 30, 48, 0.7);
            backdrop-filter: blur(10px);
            padding: 2.5rem;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(78, 154, 241, 0.1);
            transition: all 0.3s ease;
        }

        .contact-form:hover {
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            border-color: rgba(78, 154, 241, 0.3);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #4e9af1;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 0.8rem 1rem;
            border: 1px solid rgba(78, 154, 241, 0.2);
            border-radius: 5px;
            font-size: 1rem;
            background: rgba(255, 255, 255, 0.9);
            transition: all 0.3s ease;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(78, 154, 241, 0.5);
            border-color: #4e9af1;
        }

        .form-group textarea {
            height: 150px;
            resize: vertical;
        }

        .submit-btn {
            background: #4e9af1;
            color: white;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(78, 154, 241, 0.3);
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .submit-btn:hover {
            background: #3a89e6;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(78, 154, 241, 0.5);
        }

        .form-status {
            margin-top: 1rem;
            padding: 0.8rem;
            border-radius: 5px;
            text-align: center;
            display: none;
        }

        .form-status.success {
            background: rgba(46, 204, 113, 0.2);
            color: #2ecc71;
            border: 1px solid rgba(46, 204, 113, 0.3);
        }

        .form-status.error {
            background: rgba(231, 76, 60, 0.2);
            color: #e74c3c;
            border: 1px solid rgba(231, 76, 60, 0.3);
        }

        /* Footer */
        .footer {
            margin-top: auto;
            background: rgba(20, 30, 48, 0.9);
            backdrop-filter: blur(10px);
            padding: 3rem 2rem;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 3rem;
        }

        .footer-column h3 {
            font-size: 1.3rem;
            margin-bottom: 1.5rem;
            position: relative;
            display: inline-block;
        }

        .footer-column h3:after {
            content: '';
            position: absolute;
            width: 50%;
            height: 2px;
            background: #4e9af1;
            bottom: -5px;
            left: 0;
        }

        .footer-column p {
            margin-bottom: 1rem;
            opacity: 0.8;
            line-height: 1.6;
        }

        .footer-links {
            list-style: none;
        }

        .footer-links li {
            margin-bottom: 0.7rem;
        }

        .footer-links a {
            color: white;
            text-decoration: none;
            transition: all 0.3s ease;
            opacity: 0.8;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .footer-links a:hover {
            opacity: 1;
            transform: translateX(5px);
            color: #4e9af1;
        }

        .footer-bottom {
            margin-top: 3rem;
            text-align: center;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(78, 154, 241, 0.1);
            opacity: 0.7;
            font-size: 0.9rem;
        }

        .footer-bottom a {
            color: #4e9af1;
            text-decoration: none;
        }

        /* Newsletter form styling */
        .newsletter-form input {
            padding: 12px;
            border-radius: 5px;
            border: none;
            width: 100%;
            margin-bottom: 10px;
            background: rgba(255, 255, 255, 0.9);
            transition: all 0.3s ease;
        }

        .newsletter-form input:focus {
            outline: none;
            box-shadow: 0 0 0 2px #4e9af1;
        }

        .newsletter-form button {
            width: 100%;
            padding: 12px;
            background: #4e9af1;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .newsletter-form button:hover {
            background: #3a89e6;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(78, 154, 241, 0.3);
        }

        /* Floating Circles */
        .floating-circle {
            position: absolute;
            border-radius: 50%;
            background: rgba(78, 154, 241, 0.05);
            box-shadow: inset 0 0 20px rgba(78, 154, 241, 0.2);
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
        }

        .circle1 { width: 150px; height: 150px; top: 15%; left: 10%; animation: float 8s ease-in-out infinite; }
        .circle2 { width: 200px; height: 200px; top: 60%; right: 10%; animation: float 10s ease-in-out infinite 2s; }
        .circle3 { width: 120px; height: 120px; bottom: 15%; left: 25%; animation: float 7s ease-in-out infinite 4s; }
        .circle4 { width: 180px; height: 180px; top: 30%; right: 25%; animation: float 9s ease-in-out infinite 1s; }
        .circle5 { width: 100px; height: 100px; bottom: 30%; right: 40%; animation: float 6s ease-in-out infinite 3s; }

        @keyframes float {
            0% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
            100% { transform: translateY(0px) rotate(0deg); }
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .title {
                font-size: 3rem;
            }
            
            .subtitle {
                font-size: 1.2rem;
            }
            
            .process-steps {
                flex-direction: column;
                align-items: center;
            }
            
            .process-steps:before {
                display: none;
            }
            
            .step {
                width: 100%;
                margin-bottom: 2rem;
            }
            
            .safety-categories {
                grid-template-columns: 1fr;
            }
            
            .nav-links {
                display: none;
            }
        }
    </style>
